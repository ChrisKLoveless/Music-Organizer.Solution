@{
  Layout = "_Layout";
}

<body>
  @using Music.Models;
  <div class="container">
    <div class="jumbotron">
      <h1>Featured Artists</h1>
    </div>

    <div class="row">
      @if (@Model.Count == 0)
      {
        <h3>No Artists Added Yet!</h3>
      }

      @foreach(Artist artist in Model)
      {
        <ul>
            <li><a href='/artists/@artist.Id'>@artist.ArtistName</a></li>
        </ul>
      }
    </div>

    <form action="/artists/delete" method="post">
      <button type="submit" name="button" class="btn btn-dark">Clear All Items</button>
    </form>

    <p><a href='/'>Back home</a></p>
  </div>
</body>